    <Style TargetType="{x:Type local:SearchControl}">
        <Setter Property="FocusVisualStyle" Value="{x:Null}" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="Background" Value="#FFE5E5E5" />
        <Setter Property="BorderBrush" Value="#FFACACAC" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:SearchControl}">
                    <AdornerDecorator x:Name="PART_AdornerLayer" KeyboardNavigation.TabNavigation="Cycle"
                                      VerticalAlignment="Top" 
                                      HorizontalAlignment="Right">
                        <Border Background="#ffffff" BorderBrush="#d5d5d4" BorderThickness="1">
                            <Grid Margin="10,0,10,06">
                                <Grid.Resources>
                                    <Style TargetType="CheckBox">
                                        <Setter Property="BorderBrush" Value="#FF53C3D5"/>
                                    </Style>
                                </Grid.Resources>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="10" />
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                    <RowDefinition />
                                    <RowDefinition Height="10" />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="190"/>
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition  Width="30"/>
                                    <ColumnDefinition Width="30" />
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="PART_TextBox"                                          
                                         Height="20"   
                                         Width="190" 
                                         Grid.Row="1"  
                                         Grid.Column="0"
                                         BorderBrush="#d1d2d2">
                                </TextBox>
                                <Button x:Name="PART_Search"
                                        Height="20" Width="20"
                                        Grid.Row="1" Grid.Column="1"
                                        Style="{StaticResource SearchButtonStyle}">
                                </Button>
                                <Button x:Name="PART_FindPrevious"
                                        Height="20" Width="20" 
                                        Grid.Row="1" Grid.Column="2"
                                        Style="{StaticResource FindPreviousButtonStyle}">
                                </Button>
                                <Button x:Name="PART_FindNext"
                                        Height="20" Width="20"
                                        Grid.Row="1" Grid.Column="3"
                                        Style="{StaticResource FindNextButtonStyle}">
                                </Button>
                                <Button x:Name="PART_Close"
                                        Grid.Row="1" Grid.Column="4"
                                        Style="{StaticResource CloseButtonStyle}">
                                </Button>
                                <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4">


                                    <CheckBox x:Name="PART_CaseSensitiveSearch" 
                                              HorizontalAlignment="Left"
                                              Grid.Column="1" 
                                              Content="Match case"
                                              IsChecked="False">
                                    </CheckBox>
                                </Grid>
                                <Grid Grid.Row="3"  Grid.Column="0" Grid.ColumnSpan="4" >


                                    <CheckBox x:Name="PART_SearchOnTextChange" 
                                              HorizontalAlignment="Left"
                                              Grid.Column="1" 
                                              Content="SearchOnTextChange"
                                              IsChecked="False">
                                    </CheckBox>
                                </Grid>


                                <Grid Grid.Row="5"  Grid.Column="0" Grid.ColumnSpan="4" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="SearchBrush" />
                                  
                                     <sf:ColorPickerPalette  Margin="5,0,0,0" sf:SkinStorage.VisualStyle="Metro"  x:Name="PART_SearchBrush"  Grid.Column="1" Height="20" Width="40" ToolTip="SearchBrush"/>
                                    <TextBlock Text="HighLightBrush" Grid.Column="2"  />
                                    <sf:ColorPickerPalette  Margin="5,0,0,0" sf:SkinStorage.VisualStyle="Metro" x:Name="PART_HighLightBrush" Grid.Column="3" Height="20" Width="40" ToolTip="HighLightBrush" />
                                </Grid>

                                <Grid Grid.Row="7"  Grid.Column="0" Grid.ColumnSpan="1" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="SearchType" />
                                    <ComboBox x:Name="PART_SearchType" Width="100" Margin="5,0,0,0" sf:SkinStorage.VisualStyle="Metro" 
                                              HorizontalAlignment="Left"
                                              Grid.Column="1">
                                        <ComboBoxItem>
                                            Contains
                                        </ComboBoxItem>
                                        <ComboBoxItem>
                                            EndsWith
                                        </ComboBoxItem>
                                        <ComboBoxItem>
                                            StartsWith
                                        </ComboBoxItem>
                                    </ComboBox>
                                </Grid>
                            </Grid>
                        </Border>
                    </AdornerDecorator>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
